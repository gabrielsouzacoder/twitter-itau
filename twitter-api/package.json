    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "express": "^4.17.3",
    "express-prometheus-middleware": "github:gabrielsouzacoder/express-prometheus-middleware",
    "moment-timezone": "^0.5.28",
    "mongoose": "^5.9.2",
    "morgan": "^1.9.1",
    "morgan-json": "^1.1.0",
    "prettier": "^1.19.1",
    "winston": "^3.2.1"
